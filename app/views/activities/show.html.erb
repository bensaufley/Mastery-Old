<% content_for :title, "#{@activity.tracking_type.titleize} Activity: #{@activity.name}" %>
<% content_for :subhead, @activity.private ? "(Private)" : "(Public)" %> 
<% content_for :subnav do %>
  <%= link_to 'Edit', edit_user_activity_path(@user,@activity) %> |
  <%= link_to 'Back', user_activities_path(@user) %>
<% end %>

<section class="activity">
  <%- if @activity.tracking_type == 'Timed' %>
    <%- if !@activity.instances.running? %>
      <%= render partial: '/instances/start_timed_instance_form', locals: { user: @user, activity: @activity, instance: @activity.instances.new } %>
    <%- else %>
      <div id="counter" data-when="<%=@activity.instances.running.when.to_i * 1000 %>">
        <%= humanize_short(Time.now - @activity.instances.running.when) %>
      </div>
      <%= render partial: '/instances/stop_timed_instance_form', locals: { user: @user, activity: @activity, instance: @activity.instances.running } %>
    <%- end %>
  <%- else %>
    <%= render partial: '/instances/count_instance_form', locals: { user: @user, activity: @activity, instance: @activity.instances.new } %>
  <%- end %>
  
  <section class="instances">
    <header>
      <% if @activity.tracking_type == 'Timed' %>
        <h2>Total time spent:</h2>
        <div>
          <p class="timespent"><%= humanize(@activity.instances.time_spent) %></p>
        </div>
      <% else %>
        <h2>Times completed:</h2>
        <div>
          <p class="times today"><%= pluralize(@activity.instances.times('today').count, 'time') %> today.</p>
          <p class="times week"><%= pluralize(@activity.instances.times('in_last_week').count, 'time') %> in the last week.</p>
          <p class="times month"><%= pluralize(@activity.instances.times('in_last_month').count, 'time') %> in the last month.</p>
          <p class="times year"><%= pluralize(@activity.instances.times('in_last_year').count, 'time') %> in the last year.</p>
          <p class="times"><%= pluralize(@activity.instances.count,"time") %> all-time.</p>
        </div>
      <% end %>
    </header>
    <ul class="instances">
      <%- @activity.instances.order('`when` DESC').each do |instance| %>
        <li>
          <div>
            <span><%= instance.when.strftime('%A, %B %e at %l:%M%P') -%></span>
            <%- if @activity.tracking_type=='Timed' -%>
              <strong>
              <%- if instance.till.nil? -%>
                (ongoing)
              <%- else -%><%=humanize_short((instance.till || Time.now) - instance.when) -%>
              <%- end -%>
              </strong>
            <%- end -%>
            <%= button_to "x", [@user,@activity,instance], method: :delete, confirm: "Are you sure you wish to delete this instance?", class: 'btn icon cancel' -%>
          </div>
        </li>
      <%- end -%>
    </ul>
  </section>
</section>