- content_for :title, "Viewing #{link_to h(@user.username), @user}â€™s activities".html_safe

%section.activities
  %h1="Activities"
  %ul.activities
    - if @activities.empty?
      %li="No activities yet."
    - else
      - @activities.each do |activity|
        %li
          = link_to activity.name, user_activity_path(current_user,activity)
          - if activity.tracking_type=='Timed'
            = humanize(activity.instances.time_spent)
          - else
            = pluralize(activity.instances.count, "time")
  %div.btns
    = link_to "New Activity", new_user_activity_path(current_user), class: 'btn full default icon-plus-circle'